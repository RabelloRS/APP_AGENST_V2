    crew_data: Dados completos da crew
    execution_results: Resultados da execução
  returns: Resumo estruturado da execução
  example: execution_summary_builder(dados_crew, resultados_execucao)

quality_metrics_calculator:
  name: Calculadora de Métricas de Qualidade
